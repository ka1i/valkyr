{
  "extends": "@vue/tsconfig/tsconfig.web.json",
  "include": [
    "src/**/*",
    "src/**/*.ts",
    "src/**/*.d.ts",
    "src/**/*.vue",
    "types/*.ts",
    "types/*.d.ts",
  ],
  "exclude": [
    "src/**/__tests__/*"
  ],
  "compilerOptions": {
    "composite": true,
    "baseUrl": ".",
    "paths": {
      "/^": [
        "."
      ],
      "/^/*": [
        "./*"
      ],
      "/@": [
        "src"
      ],
      "/@/*": [
        "src/*"
      ],
      "/#": [
        "types"
      ],
      "/#/*": [
        "types/*"
      ],
    },
    "sourceMap": true,
    "resolveJsonModule": true,
  }
}